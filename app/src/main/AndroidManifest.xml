<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shiwei.giftofnumen">
    //文件读写权限
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    //网络权限
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".gift.activity.ActivityDetail" />
        <activity android:name=".spice.activity.SpiceActivityDetail" />
        <activity android:name=".spice.activity.ActivityXinYouDetail" />
        <activity android:name=".DownloadActivity" />
        <activity
            android:name=".gift.activity.SerachActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".CircleActivity"></activity>
    </application>

</manifest>
