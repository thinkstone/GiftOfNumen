<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shiwei.giftofnumen.MainActivity">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/mainactivity_drawlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/mainactivity_framelayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e20b0b" />

            <RadioGroup
                android:id="@+id/mainactivity_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/mainactivity_gift"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:paddingBottom="15dp"
                    android:drawableBottom="@drawable/gift"
                  />

                <RadioButton
                    android:id="@+id/mainactivity_kaifu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:paddingBottom="15dp"
                    android:drawableBottom="@drawable/kaifu" />

                <RadioButton
                    android:id="@+id/mainactivity_hot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:paddingBottom="15dp"
                    android:drawableBottom="@drawable/hot" />

                <RadioButton
                    android:id="@+id/mainactivity_spice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:button="@null"
                    android:paddingBottom="15dp"
                    android:drawableBottom="@drawable/spice" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mainactivity_slide_linear"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_gravity="left"
            android:background="@drawable/menu_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mainactivity_slide_circle"
                    android:layout_gravity="center"
                    android:src="@drawable/def_loading"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
