<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="230dp">

    <ImageButton
        android:id="@+id/spice_third_inflater_iamgebtn"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_height="230dp">
    </ImageButton>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignBottom="@+id/spice_third_inflater_iamgebtn"
        android:background="#7a566059">
        <TextView
            android:id="@+id/spice_third_inflater_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:src="@drawable/g_biao"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/spice_third_inflater_subtitle"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>