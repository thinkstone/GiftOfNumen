<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/spice_xinyou_detail_inflater_image"
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:focusable="false"
        android:layout_height="52dp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:focusable="false"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/spice_xinyou_detail_inflater_title"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#000000"
            android:singleLine="true"
            android:gravity="left"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/spice_xinyou_detail_inflater_content1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:singleLine="true"
                android:paddingRight="2dp"
                android:gravity="left"></TextView>
            <TextView
                android:id="@+id/spice_xinyou_detail_inflater_content2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:singleLine="true"
                android:gravity="left"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/spice_xinyou_detail_inflater_content3"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="left"
            android:singleLine="true"
            android:layout_height="0dp" />
    </LinearLayout>
    <Button
        android:id="@+id/spice_xinyou_detail_inflater_btn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/lingqurigthnow1"
        android:text="下载"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="2dp"
        android:layout_height="32dp" />
</LinearLayout>