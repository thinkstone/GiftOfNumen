<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/spice_xinyou_inflater_iamgebtn"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_height="180dp">
    </ImageButton>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignBottom="@+id/spice_xinyou_inflater_iamgebtn"
        android:background="#6b515851">
        <TextView
            android:id="@+id/spice_xinyou_inflater_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:singleLine="true"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/spice_xinyou_inflater_circleimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:civ_border_width="1dp"
                android:layout_centerInParent="true"
                app:civ_border_color="#cfd433"
                android:layout_gravity="center_vertical"
               />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>