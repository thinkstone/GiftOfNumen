<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/giftlist_iamge"
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        android:focusable="false"
        android:layout_height="52dp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:focusable="false"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/giftlist_title"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="left"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/giftlist_subtitle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="11sp"
            android:gravity="left"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp">
        <TextView
            android:id="@+id/giftlist_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:paddingRight="2dp"
            android:textColor="#d43333"
            android:gravity="left"></TextView>
        <TextView
            android:id="@+id/giftlist_content1"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:singleLine="true"
            android:gravity="left"
             />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/giftlist_btn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#00000000"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="2dp"
        android:layout_height="32dp" />

</LinearLayout>