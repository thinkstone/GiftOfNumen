<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:background="#d43333"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/gift_serach_back"
            android:layout_width="0dp "
            android:layout_weight="1"
            android:background="#00000000"
            android:layout_gravity="center"
            android:src="@drawable/back"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/gift_serach_edittext"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/serach_edittext_background"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/gift_serach_serachbtn"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_gravity="center"
            android:text="搜索"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="#00000000"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.example.shiwei.giftofnumen.customerview.CustomerListview
        android:id="@+id/gift_serach_listview"
        android:layout_width="match_parent"
        android:divider="@drawable/diver"
        android:layout_height="wrap_content"></com.example.shiwei.giftofnumen.customerview.CustomerListview>
    </ScrollView>
</LinearLayout>