<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hot_listview_inflater_imageicon"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1.5"
            android:focusable="false" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:focusable="false"
            android:paddingLeft="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hot_listview_inflater_text1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/hot_listview_inflater_text2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:textSize="12sp"></TextView>


            <TextView
                android:id="@+id/hot_listview_inflater_text3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/hot_listview_inflater_text4"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="#d43333"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/hot_listview_inflater_text5"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="left"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>