<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shiwei.giftofnumen.kaifu.KaiFuFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear_kaifu"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="#d43333"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/kiafu_imagebutton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/title_bar_menu" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:background="#00000000"
                android:gravity="center"
                android:text="礼服"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/kaifu_tablelayout"
            android:layout_width="fill_parent"
            android:layout_below="@+id/linear_kaifu"
            android:layout_height="wrap_content"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/kaifu_viewpager"
            android:layout_below="@+id/kaifu_tablelayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</FrameLayout>
