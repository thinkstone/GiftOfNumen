<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shiwei.giftofnumen.DownloadActivity">

    <LinearLayout
        android:id="@+id/downoad_linear"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="#d43333"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/download_detail_imagebtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/download_detail_title1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="#00000000"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/download_detail_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00000000" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/downoad_linear"
        >

        <LinearLayout
            android:id="@+id/downoad_linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/download_detail_imageicon"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:focusable="false" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:focusable="false"
                android:paddingLeft="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/download_detail_title2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/download_detail_type"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:textSize="12sp"></TextView>


                <TextView
                    android:id="@+id/download_detail_appsize"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/downoad_linear2"
            android:layout_above="@+id/download_linear3"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/download_detail_recycleview"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:layout_height="200dp"></android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/download_text"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:text="游戏介绍"
            android:padding="5dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/download_detail_youxicontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/download_linear3"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:background="#d43333"
                android:layout_height="1dp" />
            <Button
                android:id="@+id/download_detail_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:background="#00000000"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
